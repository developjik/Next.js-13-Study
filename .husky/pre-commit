#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "=========================================================================="
echo "🔍 Commit 이전에 lint 규칙을 검사합니다..." 
echo "=========================================================================="

if npx lint-staged; then
  echo "=========================================================================="
  echo "lint 규칙 통과 ✅"
  echo "==========================================================================\n"
  exit 0
else
  echo "=========================================================================="
  echo "lint 규칙 오류 ❌"
  echo "==========================================================================\n"
  exit 1
fi 